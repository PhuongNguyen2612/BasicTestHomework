<configuration>
    <property name="LOG_HOME" value="C:\Users\Phuong_Nguyen\IdeaProjects\TestProject\log"/>

    <appender name="file" class="ch.qos.logback.core.FileAdapter">
        <file>${LOG_HOME}/INFO_log.log</file>
        <!--        <file>log/INFO_log-${byDay}.log</file>-->
        <append>true</append>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="file" />
        <appender-ref ref="console"/>
    </root>
</configuration>